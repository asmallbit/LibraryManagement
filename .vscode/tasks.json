{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",     // 编译任务的名称，跟上面preLaunchTask的值对应
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",   // 编译器的路径，须跟你自己的电脑相符
            
            "args": [    // 编译器执行时的参数，跟手动编译时输入的内容基本一致，主要是多了-g参数，以加入调试信息
                "-g",
                "${file}",
                //链接C++标准库STL
                //"-lstdc++",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}